<% var contact = contact.data[0] %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <title><%= contact.page_title %></title>

    <!--Favicon-->
    <link rel="icon" href=" <% if (store.data[0].logo1 != null) { %>
        <%= "/api/transform/"+ JSON.parse(store.data[0].logo1)%>
    <% } else {  %>
      <%= `img/demo/favicon.png ` 
      %>
    <% } %>" type="image/jpg">

    <meta name="description" content="<%= contact.meta_description %>" />
        <meta name="title" content="<%= contact.meta_title %>" />


    <!-- CSS -->
    <%- include('include/head') %>
 

</head>

<body>

    <!-- Pre Loader -->

 	

    <!-- Header Top Area -->

    <%- include('include/page-header') %>
    

    <!-- Breadcrumb Area  -->

    <div class="breadcrumb-area" style="background-image:  url(<% if (contact.cover_image != null) { %>
        <%= "/api/transform/"+ JSON.parse(contact.cover_image)%>
    <% } else {  %>
      <%= `img/demo/favicon.png ` 
      %>
    <% } %>);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-title">
                        <h1><%= contact.breadcrumd_name %></h1>
                        <h6><a href="/">Home</a> / <%= contact.breadcrumd_name %></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section  -->
    <div class="contact-page white-bg section-padding">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-6">
                    <div class="section-title">
                        <h6>Contact Us</h6>
                        <h2>Get In Touch</h2>
                    </div>
                    <div class="contact-form-wrap mt-40">
                        <form action="#">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" placeholder="Your Name">
                                </div>
                                <div class="col-md-6">
                                    <input type="email" placeholder="Your E-mail">
                                </div>
                                <div class="col-md-6">
                                    <input type="tel" placeholder="Phone Number">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" placeholder="Subject">
                                </div>                                
                                <div class="col-12">
                                    <textarea name="message" id="message" cols="30" rows="10" placeholder="Message here..."></textarea>
                                    <input type="submit" value="Submit Now">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6">
                    <div class="contact-info-wrap gray-bg">
                        <h3><%= contact.form_title %></h3>
                        <!-- <p>Cloud computing is a model for delivering on-demand computing resources over the internet. It can benefit your </p> -->
                        <div class="contact-info-inner mt-60">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="single-contact-info">
                                        <div class="info-icon">
                                            <i class="fa-solid fa-phone"></i>
                                        </div>
                                        <div class="info-content">
                                            <h4>Phone</h4>
                                            <p><a style="text-decoration: none;" href="tel:<%= address.data[0].phone_number %>"><%= address.data[0].phone_number %></a></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="single-contact-info">
                                        <div class="info-icon">
                                            <i class="fa-solid fa-envelope"></i>
                                        </div>
                                        <div class="info-content">
                                            <h4>Email</h4>
                                            <p><a style="text-decoration: none;" href="mailto:<%= address.data[0].email %> "><%= address.data[0].email %></a></p>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="single-contact-info">
                                        <div class="info-icon">
                                            <i class="fa-solid fa-location-dot"></i>
                                        </div>
                                        <div class="info-content">
                                            <h4>Location</h4>
                                            <p class="mb-10"><%= address.data[0].address %></p>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Google Map Start-->
            <div class="google-map mt-100">
                <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d3690.404245521138!2d91.80989606467384!3d22.338360085303748!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sdewanhat%20near%20Chattogram!5e0!3m2!1sen!2sbd!4v1677069314806!5m2!1sen!2sbd" width="600" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

   

    <!-- CTA Section  -->
    <div class="cta-area">
        <div class="container">
            <div class="cta-bg bg-cover" data-background="assets/img/cta-bg.png">
                <div class="row">
                    <div class="col-xl-5">
                        <h2>Call Now</h2>
                        <div class="contact-num">
                            <span><i class="fa-solid fa-phone"></i><a href="tel:<%= address.data[0].phone_number %>"><%= address.data[0].phone_number %></a></span>
                        </div>
                    </div>
                </div>                                
            </div>
        </div>
    </div>

    <!-- Footer Area  -->
    <%- include('include/footer') %>


    <!-- Search Dropdown -->

    <div class="search-popup">
        <span class="search-back-drop"></span>

        <div class="search-inner">
            <div class="container">
                <div class="logo">
                    <a class="navbar-brand" href="index.html"><img src="assets/img/logo-white.png" alt=""></a>
                </div>
                <button class="close-search"><span class="la la-times"></span></button>
                <form method="post" action="index.html">
                    <div class="form-group">
                        <input type="search" name="search-field" value="" placeholder="Type your keyword" required="">
                        <button type="submit"><i class="fal fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

        <!-- Off-canvas Area-->

        <div class="extra-info theme-bg">
            <div class="close-icon menu-close">
                <button>
                    <i class="las la-times"></i>
                </button>
            </div>
            <div class="logo-side mb-30">
                <div class="logo">
                    <img src="assets/img/logo-white.png" alt="">
                </div>
            </div>
            <div class="side-info">
                <div class="contact-list mb-40">                    
                    <p>We must explain to you how all seds this mistakens idea off denouncing</p>
                    <img src="assets/img/offcanvas-img.jpg" alt="">
    
                    <div class="mt-30 mb-30">
                        <a href="contact.html" class="theme-btn">Get In Touch</a>
                    </div>
                </div>
                <div class="social-area-wrap">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a> 
                    <a href="#"><i class="fa-brands fa-instagram"></i></a> 
                    <a href="#"><i class="fa-brands fa-pinterest"></i></a> 
                    <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                </div>
            </div>
        </div>
    
        <div class="offcanvas-overlay"></div>


    <!-- back to top start -->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>


    <!--  JS -->

    <%- include('include/script') %>
 

</body>

</html>
